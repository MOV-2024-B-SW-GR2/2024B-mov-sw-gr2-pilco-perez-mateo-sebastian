<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="16dp">

    <EditText
        android:id="@+id/etNombreCurso"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:hint="Nombre del curso"
        android:inputType="textPersonName"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent" />

    <EditText
        android:id="@+id/etDescripcionCurso"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:hint="Descripción del curso"
        android:inputType="textMultiLine"
        app:layout_constraintTop_toBottomOf="@id/etNombreCurso"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent" />

    <EditText
        android:id="@+id/etDuracionCurso"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:hint="Duración (en horas)"
        android:inputType="number"
        app:layout_constraintTop_toBottomOf="@id/etDescripcionCurso"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent" />

    <Button
        android:id="@+id/btnGuardarCurso"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Guardar"
        app:layout_constraintTop_toBottomOf="@id/etDuracionCurso"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent" />
</androidx.constraintlayout.widget.ConstraintLayout>
