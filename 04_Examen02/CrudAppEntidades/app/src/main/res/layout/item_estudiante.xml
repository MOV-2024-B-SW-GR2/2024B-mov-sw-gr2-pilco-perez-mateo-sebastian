<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:padding="16dp">

    <TextView
        android:id="@+id/tvNombreEstudiante"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:text="Nombre del estudiante"
        android:textStyle="bold"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toStartOf="@id/btnEditEstudiante"
        app:layout_constraintBottom_toTopOf="@id/tvEmailEstudiante" />

    <TextView
        android:id="@+id/tvEmailEstudiante"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:text="email@example.com"
        app:layout_constraintTop_toBottomOf="@id/tvNombreEstudiante"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toStartOf="@id/btnEditEstudiante" />

    <TextView
        android:id="@+id/tvTelefonoEstudiante"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:text="123456789"
        app:layout_constraintTop_toBottomOf="@id/tvEmailEstudiante"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toStartOf="@id/btnEditEstudiante" />

    <ImageButton
        android:id="@+id/btnEditEstudiante"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:contentDescription="Editar estudiante"
        android:src="@drawable/ic_edit"
        app:layout_constraintEnd_toStartOf="@id/btnDeleteEstudiante"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="parent" />

    <ImageButton
        android:id="@+id/btnDeleteEstudiante"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:contentDescription="Eliminar estudiante"
        android:src="@drawable/ic_delete"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="parent" />
</androidx.constraintlayout.widget.ConstraintLayout>
